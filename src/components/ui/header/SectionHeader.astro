---
import { Link } from "@nextui-org/react";

interface Props {
  title: string;
  home: string;
  homeRef: string;
  separation: string;
  section: string;
  sectionRef: string;
}

const { title, home, homeRef, separation, section, sectionRef } = Astro.props;
---

<section class="flex justify-center h-56 bg-no-repeat bg-cover bg-header">
  <div class="flex flex-col items-center justify-center w-2/3 gap-y-4">
    <h1 class="text-5xl font-bold text-center leading-[48px]">
      {title}
    </h1>
    <div class="flex items-center gap-x-3">
      <Link href={homeRef} className="text-2xl text-black font-light">
        {home}
      </Link>
      <p class="text-xl font-light">{separation}</p>
      <Link href={sectionRef} className="text-2xl font-light text-secondary">
        {section}
      </Link>
    </div>
  </div>
</section>
