---
import { homePageImages } from "@config/images";
import ParallaxImages from "@components/ui/parallax/ParallaxImages.astro";
import { Image } from "astro:assets";

interface Props {
  index: number;
  category: string;
  servicesPageImages: any;
}

const { index, category, servicesPageImages } = Astro.props;
---

{
  index % 2 === 0 ? (
    <div class="relative flex-1 hidden lg:block">
      <ParallaxImages sceneClass={`.scene${index}`}>
        <div class="absolute min-h-[500px]">
          <Image
            src={homePageImages.about2}
            alt={category}
            height={490}
            width={370}
          />
        </div>
        <div class="absolute z-10 ml-52 top-52">
          <Image
            src={homePageImages.about1}
            alt={category}
            height={300}
            width={300}
          />
        </div>
      </ParallaxImages>
      <div class="absolute -right-16 scale-x-[-1]">
        <Image
          src={servicesPageImages.decoration}
          alt="Decorative image"
          height={341}
          width={496}
        />
      </div>
    </div>
  ) : null
}
