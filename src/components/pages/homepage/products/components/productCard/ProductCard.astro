---
import { Link } from "@nextui-org/react";
import type { Product } from "../../_products.info";
import AddToCart from "../productsRender/components/addToCart/AddToCart.astro";
import { Image } from "astro:assets";

interface Props {
  product: Product;
}

const { product } = Astro.props;
---

<div
  class="full flex flex-col gap-4 min-w-[300px] lg:min-w-[265px] sm:w-[45] lg:w-[22%]"
>
  <Link
    href="https://tienda.isolashes.com/productos"
    className="flex flex-col w-full gap-y-3"
  >
    <div class="relative w-full h-[270px]">
      <Image
        src={product.images[0].src}
        alt={product.name}
        width={500}
        height={270}
        class="absolute z-10 object-cover transition-opacity duration-500 rounded-none hover:opacity-0"
      />
      <Image
        src={product.images[1].src}
        alt={product.name}
        width={500}
        height={270}
        class="absolute object-cover rounded-none"
      />
    </div>
    <div class="flex flex-col justify-start w-full lg:flex-row">
      <span class="text-lg font-medium text-black">{product.name}</span>
    </div>
    <div class="w-full text-base text-start text-default-600">
      {product.description}
    </div>
  </Link>
  <AddToCart />
</div>
